{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "tslint", // Build also does rollup
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "build", // Build also does rollup
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}